# Environment Configuration for People Manager CRM
# Copy this file to .env and fill in your actual values

# Database Connection
# Format: postgresql://username:password@host:port/database
# Example for external PostgreSQL at pbe.im:3306
DATABASE_URL=

# Session Secret
# Generate a random string for production (use: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-session-key-change-me-in-production

# Node Environment
NODE_ENV=production

# S3-Compatible Object Storage
# Used for storing profile images and attachments
S3_ENDPOINT=https://hel1.your-objectstorage.com
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key-here
S3_SECRET_KEY=your-secret-key-here

# Authentication (Optional)
# Set to 'true' to disable authentication during development
# DISABLE_AUTH=false
