# Environment Configuration for People Manager CRM
# Copy this file to .env and fill in your actual values

# Database Connection
# Format: postgresql://username:password@host:port/database
# Example for external PostgreSQL at pbe.im:3306
DATABASE_URL=postgresql://people:people812@pbe.im:3306/people_crm

# Session Secret
# Generate a random string for production (use: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-session-key-change-me-in-production

# Node Environment
NODE_ENV=production
